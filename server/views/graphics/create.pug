extends ../shared/layout
block main-content
    main
        .container.conteiner-my
            .row
                .col-sm-4.col-sm-offset-5
                    h3.text-center Add Graphics
                    if (globalError)
                        h3.text-center= globalError
                    form(method="post" action="/graphics/create" enctype="multipart/form-data").form-login-my
                        .form-group
                            label.label-login-my(for='category') Category
                            select(id="category" class="form-control" name="category")
                                option Photography
                                option Drawing
                                option 3D Models
                                option Other
                        .form-group
                            label.label-login-my(for='articleName') Name
                            input#articleName.form-control(type='text' name="name" required="true")
                        .form-group
                            label.label-login-my(for='description') Description
                            input#description.form-control(type='text' name="description")
                        .form-group
                            label(for="input-file" class="label-login-my") Chose JPEG or PNG file (Max size: 1MB)
                            input(type='file' id="input-file" class="form-control" name="image" required="true")
                        button.btn.btn-default(type='submit') Submit
                        button.btn.btn-default(onClick="history.go(-1)") Cancel
    include ../shared/footer