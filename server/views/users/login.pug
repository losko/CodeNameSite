extends ../shared/layout
block main-content
    main
        .container
            .row
                .col-sm-4.col-sm-offset-5
                    h1.text-center Login
                    form.form-login-my
                        .form-group
                            label.label-login-my(for='email') Email address:
                            input#email.form-control(type='email')
                        .form-group
                            label.label-login-my(for='pwd') Password:
                            input#pwd.form-control(type='password')
                        .checkbox
                            label.label-login-my
                                input(type='checkbox')
                                |  Remember me
                        button.btn.btn-default(type='submit') Login