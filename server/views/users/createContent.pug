extends ../shared/layout
block main-content
    main
        .container
            .row
                .col-sm-4.col-sm-offset-5
                    h1.text-center Create New Post
                    form.form-login-my
                        .form-group
                            label.label-login-my(for='category') Category
                            select(id="category" class="form-control")
                                option Graphics
                                option Music
                                option Literature
                        .form-group
                            label.label-login-my(for='sub-category') Sub Category
                            select#sub-category.form-control
                                option 1
                                option 2
                                option 3
                        .form-group
                            label.label-login-my(for='secondName') Name
                            input#secondName.form-control(type='text')
                        .form-group
                            label.label-login-my(for='description') Description
                            input#description.form-control(type='text')
                        .form-group
                            label(for="input-file" class="label-login-my") Chose file
                            input(type='file' id="input-file" class="form-control")
                        button.btn.btn-default(type='submit') Submit
    include ../shared/footer