extends ../shared/layout
block main-content
    .container.conteiner-my
        h1.text-center Index Content
        .row
            each item in graphics
                .col-sm-4
                    a(href="/graphics/details/" + item.id)
                        h2.text-center=item.name
                        .index-display-image
                            .inside-conteiner
                                image(src=item.image + '.png').image-display
                                p=item.content
                    small Author : &nbsp;
                    a(href="/users/profile/" + item.author.id)
                        span=item.author.username
                    p
                        small Category : &nbsp;
                        small=item.category
                        br
                        small Views : &nbsp;
                        small=item.views
        .row
            each item in literature
                .col-sm-4
                    a(href="/literature/details/"+item.id)
                        h2.text-center=item.name
                        .index-display
                            .inside-conteiner
                                p=item.content
                    small Author : &nbsp;
                    a(href="/users/profile/" + item.author.id)
                        span=item.author.username
                    p
                        small Category : &nbsp;
                        small=item.category
                        br
                        small Views : &nbsp;
                        small=item.views
        ul.pagination.text-center
            if(pages)
                -for (var i=0; i<pages; i++)
                    if(currentPage === i)
                        li.active
                            a(href='/?page=' + i).btn.btn
                                span=i
                    else
                        li
                            a(href='/?page=' + i).btn.btn
                                span=i



    include ../shared/footer
