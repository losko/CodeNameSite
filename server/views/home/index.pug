extends ../shared/layout
block main-content
    .container.conteiner-my
        h1.text-center Index Content
        .row
        each item in content
            .col-sm-4
                a(href="/graphics/details/"+item.id)
                    h2.text-center=item.name
                    .index-display

                        .inside-conteiner
                            image(src=item.image+'.png').image-display
                            //p=item.content
                    a(href="#")
                        small=item.author.username
                    p
                        small=item.views

    include ../shared/footer
