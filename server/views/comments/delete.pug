extends ../shared/layout
block main-content
    .container
        h1.text-center Comments
        .row
            form(class="form-login-my" method="post" )
                .form-group
                    input#literatureName.form-control(type='text' name="target" value=""+comment._id style="Display: none")
                .form-group
                    label(for="input-file" class="label-login-my") Comment
                    textarea(type='text' id="input-file" class="form-control" name="comment" disabled)=comment
                button.btn.btn-default(type='submit') Delete