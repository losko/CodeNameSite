extends ../shared/layout
block main-content
    .container.conteiner-my
        h1.text-center Poems
        .row
        each item in literatures
            .col-sm-4
                a(href="/literature/details/" + item.id)
                    h2.text-center=item.name
                    .index-display
                        .inside-conteiner
                            p=item.content
                small Author : &nbsp;
                a(href="/users/profile/" + item.author.id)
                    span=item.author.username
                p
                    small Category : &nbsp;
                    small=item.category
                    br
                    small Views : &nbsp;
                    small=item.views
    include ../shared/footer

