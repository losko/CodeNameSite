extends ../shared/layout
block main-content
    .container.conteiner-my
        h1.text-center Novels
        .row
        each item in literatures
            .col-sm-4
                a(href="/literature/details/"+item.id)
                    h2.text-center=item.name
                    .index-display

                        .inside-conteiner
                            p=item.content
                    a(href="#")
                        small=item.author.username
                    p
                        small=item.views
    include ../shared/footer