extends ../shared/layout
block main-content
    .container.conteiner-my
        h3.text-center Other
        .row
            each item in literatures
                .col-sm-4
                    a(href="/literature/details/" + item.id)
                        h2=item.name
                        .index-display.lit-a.shadow
                            .inside-conteiner
                    small Author : &nbsp;
                    a(href="/users/profile/" + item.author.id)
                        span=item.author.username
                    p
                        small Category : &nbsp;
                        small=item.category
                        br
                        small Views : &nbsp;
                        small=item.views
        ul.pagination.text-center
            if(pages)
                if(currentPage !== 0)
                    a(href='/literature/other/?page=' + (currentPage - 1)).btn.btn
                        span <<<
                -for (var i=0; i<pages; i++)
                    if(currentPage === i)
                        li.active
                            a(href='/literature/other/?page=' + i).btn.btn
                                span=(i + 1)
                    else
                        li
                            a(href='/literature/other/?page=' + i).btn.btn
                                span=(i + 1)
                if((currentPage + 1) < pages)
                    a(href='/literature/other/?page=' + (currentPage + 1)).btn.btn
                        span >>>
    include ../shared/footer
