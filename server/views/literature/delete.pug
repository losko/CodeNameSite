extends ../shared/layout
block main-content
    main
        .container.conteiner-my
            .row
                .col-mm-10.col-sm-offset-2
                    h3.text-center Delete Literature
                    if (globalError)
                        h3= globalError
                    form(class="form-login-my" method="POST" action="/literature/delete/"+id)
                        .form-group
                            label.label-login-my(for='category') Category
                            select(id="category" class="form-control" name="category" disabled )
                                if(category === "Poetry")
                                    option(selected="selected") Poetry
                                    option Poems
                                    option Novels
                                    option Other
                                if(category === "Poems")
                                    option Poetry
                                    option(selected="selected") Poems
                                    option Novels
                                    option Other
                                if(category === "Novels")
                                    option Poetry
                                    option Poems
                                    option(selected="selected") Novels
                                    option Other
                                if(category === "Other")
                                    option Poetry
                                    option Poems
                                    option Novels
                                    option(selected="selected") Other
                        .form-group
                            label.label-login-my(for='literatureName') Name
                            input#literatureName.form-control(type='text' name="name" value=""+name disabled)
                        .form-group
                            label.label-login-my(for='description') Description
                            input#description.form-control(type='text' name="description" value=""+description disabled)
                        .form-group
                            label(for="input-file" class="label-login-my") Content
                            textarea(type='text' id="input-file" class="form-control" name="content" rows="20"  disabled)=content
                        a(onClick="history.go(-1)").btn.btn-default Cancel
                        button.btn.btn-default(type='submit') Delete
    include ../shared/footer